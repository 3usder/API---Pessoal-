<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.text.Font?>

<AnchorPane xmlns="http://javafx.com/javafx/24.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="br.com.squadtech.bluetech.controller.professorTG.CadastroProfessoresController"
            stylesheets="@../../css/Style.css">

    <TabPane tabClosingPolicy="UNAVAILABLE" AnchorPane.bottomAnchor="0.0"
             AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">

        <tabs>
            <!-- Aba 1: Cadastro Individual -->
            <Tab text="Cadastro Individual">
                <ScrollPane fitToWidth="true" style="-fx-padding: 20;">
                    <AnchorPane style="-fx-pref-height: 900px;">

                        <!-- Título -->
                        <Label text="Cadastro Professor Orientador"
                               style="-fx-font-size: 16px; -fx-font-weight: bold;"
                               AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"/>

                        <!-- Container principal - AGORA SÓ CAMPOS LARGOS -->
                        <VBox spacing="15" AnchorPane.topAnchor="40" AnchorPane.leftAnchor="0"
                              style="-fx-pref-width: 800px;">

                            <!-- Nome completo -->
                            <VBox spacing="2">
                                <Label text="Nome completo:"/>
                                <TextField fx:id="txtNome" promptText="Digite o nome completo"
                                           styleClass="text-field"
                                           style="-fx-pref-width: 800px; -fx-pref-height: 35px;"/>
                            </VBox>

                            <!-- E-mail -->
                            <VBox spacing="2">
                                <Label text="E-mail:"/>
                                <TextField fx:id="txtEmail" promptText="Digite o e-mail"
                                           styleClass="text-field"
                                           style="-fx-pref-width: 800px; -fx-pref-height: 35px;"/>
                            </VBox>

                            <!-- Cargo/Função -->
                            <VBox spacing="2">
                                <Label text="Cargo/Função:"/>
                                <TextField fx:id="txtCargo" promptText="Digite o cargo/função"
                                           styleClass="text-field"
                                           style="-fx-pref-width: 800px; -fx-pref-height: 35px;"/>
                            </VBox>

                            <!-- Curso Vinculado -->
                            <VBox spacing="2">
                                <Label text="Curso Vinculado:"/>
                                <TextField fx:id="txtCurso" promptText="Digite o curso vinculado"
                                           styleClass="text-field"
                                           style="-fx-pref-width: 800px; -fx-pref-height: 35px;"/>
                            </VBox>

                            <!-- Formação Acadêmica -->
                            <VBox spacing="2">
                                <Label text="Formação Acadêmica:"/>
                                <TextArea fx:id="txtFormacao" promptText="Digite a formação acadêmica"
                                          styleClass="text-area"
                                          style="-fx-pref-width: 800px; -fx-pref-height: 80px;"/>
                            </VBox>

                            <!-- Áreas de Especialização -->
                            <VBox spacing="2">
                                <Label text="Áreas de Especialização:"/>
                                <TextArea fx:id="txtEspecializacao" promptText="Digite as áreas de especialização"
                                          styleClass="text-area"
                                          style="-fx-pref-width: 800px; -fx-pref-height: 80px;"/>
                            </VBox>

                            <!-- BOTÕES SALVAR E CANCELAR - MAIS PRÓXIMO DOS CAMPOS -->
                            <HBox spacing="10" style="-fx-padding: 10 0 0 0;" alignment="CENTER_LEFT">
                                <JFXButton fx:id="btnSalvar" text="Salvar"
                                           styleClass="button"
                                           onAction="#salvarProfessor"
                                           style="-fx-pref-width: 100px;"/>
                                <JFXButton fx:id="btnCancelar" text="Cancelar"
                                           styleClass="button-secondary"
                                           onAction="#cancelar"
                                           style="-fx-pref-width: 100px;"/>
                            </HBox>

                        </VBox>

                        <!-- LISTA DE PROFESSORES CADASTRADOS - UM POUCO MAIS ABAIXO -->
                        <VBox spacing="10" AnchorPane.topAnchor="590" AnchorPane.leftAnchor="0"
                              style="-fx-pref-width: 800px;">

                            <Label text="Professores Orientadores Cadastrados"
                                   style="-fx-font-size: 16px; -fx-font-weight: bold; -fx-padding: 30 0 10 0;"/>

                            <!-- TABELA COM AÇÕES -->
                            <TableView fx:id="tableViewProfessores" style="-fx-pref-height: 250px; -fx-pref-width: 800px;"
                                       styleClass="card">
                                <columns>
                                    <TableColumn fx:id="colNome" text="Nome" prefWidth="140"/>
                                    <TableColumn fx:id="colEmail" text="Email" prefWidth="180"/>
                                    <TableColumn fx:id="colCargo" text="Cargo" prefWidth="110"/>
                                    <TableColumn fx:id="colCurso" text="Curso" prefWidth="130"/>
                                    <TableColumn fx:id="colFormacao" text="Formação" prefWidth="110"/>
                                    <TableColumn fx:id="colEspecializacao" text="Especialização" prefWidth="110"/>
                                    <TableColumn fx:id="colAcoes" text="Ações" prefWidth="120"/>
                                </columns>
                            </TableView>

                        </VBox>

                    </AnchorPane>
                </ScrollPane>
            </Tab>

            <!-- Aba 2: Cadastro em Massa -->
            <Tab text="Cadastro em Massa (CSV)">
                <VBox spacing="20.0" style="-fx-padding: 20;">
                    <Label text="Cadastro em Massa via CSV"
                           style="-fx-font-size: 18px; -fx-font-weight: bold;" />
                    <!-- Aqui vamos adicionar o upload de CSV depois -->
                    <Label text="Upload de arquivo CSV será implementado aqui..." />
                </VBox>
            </Tab>
        </tabs>
    </TabPane>

</AnchorPane>