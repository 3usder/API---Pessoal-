<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ControllerPrincipal"
            prefWidth="1000" prefHeight="700">

    <top>
        <VBox spacing="10" style="-fx-background-color: #2c3e50; -fx-padding: 15;">
            <Label text="Sistema de Visualização de Orientações - Professor TG"
                   style="-fx-text-fill: white; -fx-font-size: 20px; -fx-font-weight: bold;" />
            <Label text="Controle e acompanhamento da distribuição de alunos entre orientadores"
                   style="-fx-text-fill: #ecf0f1; -fx-font-size: 12px;" />
        </VBox>
    </top>

    <center>
        <VBox spacing="15" style="-fx-padding: 20;">

            <!-- Seção Vincular Aluno -->
            <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15;">
                <Label text="🔗 Vincular Aluno a Orientador" style="-fx-font-weight: bold; -fx-text-fill: #2c3e50; -fx-font-size: 14px;"/>
                <HBox spacing="30" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Selecionar Aluno:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="comboAlunos" prefWidth="300"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Selecionar Orientador:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="comboProfessores" prefWidth="300"/>
                    </VBox>
                </HBox>
                <HBox spacing="15">
                    <Button text="✅ Vincular" onAction="#vincularAlunoOrientador"
                            style="-fx-background-color: #27ae60; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                    <Button text="❌ Desvincular" onAction="#desvincularAluno"
                            style="-fx-background-color: #e74c3c; -fx-text-fill: white; -fx-font-weight: bold; -fx-pref-width: 120;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="🔄 Atualizar Dados" onAction="#atualizarDados"
                            style="-fx-background-color: #3498db; -fx-text-fill: white; -fx-font-weight: bold;"/>
                    <Button text="👁️ Mostrar Todos os Alunos" onAction="#mostrarTodosAlunos"
                            style="-fx-background-color: #f39c12; -fx-text-fill: white; -fx-font-weight: bold;"/>
                </HBox>
            </VBox>

            <!-- Estatísticas e Controles -->
            <HBox spacing="30">
                <!-- Estatísticas -->
                <VBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 350;">
                    <Label text="📈 Estatísticas Gerais" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <GridPane hgap="15" vgap="10">
                        <Label text="Total de Alunos:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="labelTotalAlunos" text="0" style="-fx-font-weight: bold; -fx-font-size: 16;"
                               GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                        <Label text="Com Orientador:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="labelAlunosComOrientador" text="0" style="-fx-font-weight: bold; -fx-text-fill: green; -fx-font-size: 16;"
                               GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                        <Label text="Sem Orientador:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="labelAlunosSemOrientador" text="0" style="-fx-font-weight: bold; -fx-text-fill: red; -fx-font-size: 16;"
                               GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                        <Label text="Média por Professor:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                        <Label fx:id="labelMediaPorProfessor" text="0.0" style="-fx-font-weight: bold; -fx-font-size: 16;"
                               GridPane.rowIndex="3" GridPane.columnIndex="1"/>
                    </GridPane>
                </VBox>

                <!-- Dica -->
                <VBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 15; -fx-pref-width: 350;"
                      alignment="CENTER">
                    <Label text="💡 Como usar o sistema:" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <VBox spacing="5">
                        <Label text="• Selecione aluno e professor para vincular" style="-fx-font-size: 12px;"/>
                        <Label text="• Clique em um professor para filtrar alunos" style="-fx-font-size: 12px;"/>
                        <Label text="• Use 'Mostrar Todos' para ver todos os alunos" style="-fx-font-size: 12px;"/>
                        <Label text="• 'Atualizar Dados' busca informações do banco" style="-fx-font-size: 12px;"/>
                    </VBox>
                </VBox>
            </HBox>

            <!-- Tabelas -->
            <HBox spacing="20" VBox.vgrow="ALWAYS">
                <!-- Tabela de Alunos -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="👥 Lista de Alunos" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="tableViewAlunos" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNomeAluno" text="Nome" prefWidth="200"/>
                            <TableColumn fx:id="colEmailAluno" text="Email" prefWidth="250"/>
                            <TableColumn fx:id="colOrientadorAluno" text="Orientador" prefWidth="180"/>
                        </columns>
                    </TableView>
                </VBox>

                <!-- Tabela de Professores -->
                <VBox spacing="8" HBox.hgrow="ALWAYS">
                    <Label text="👨‍🏫 Lista de Professores" style="-fx-font-weight: bold; -fx-font-size: 14px;"/>
                    <TableView fx:id="tableViewProfessores" VBox.vgrow="ALWAYS">
                        <columns>
                            <TableColumn fx:id="colNomeProfessor" text="Nome" prefWidth="250"/>
                            <TableColumn fx:id="colQuantidadeAlunos" text="Qtd. Alunos" prefWidth="120"/>
                        </columns>
                    </TableView>
                </VBox>
            </HBox>
        </VBox>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #ecf0f1; -fx-padding: 10;">
            <Label text="Sistema de Orientação - Desenvolvido para Professor de TG"
                   style="-fx-text-fill: #7f8c8d; -fx-font-size: 11px;"/>
        </HBox>
    </bottom>

</BorderPane>