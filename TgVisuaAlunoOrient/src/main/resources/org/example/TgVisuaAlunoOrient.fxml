<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/11.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.example.ControllerPrincipal"
      spacing="15"
      style="-fx-padding: 20;">

    <!-- Cabeçalho -->
    <VBox spacing="5">
        <Label text="Sistema de Visualização de Orientações - Professor TG"
               style="-fx-font-size: 20px; -fx-font-weight: bold;"/>
        <Label text="Controle e acompanhamento da distribuição de alunos entre orientadores"
               style="-fx-text-fill: gray; -fx-font-size: 12px;"/>
    </VBox>

    <Separator/>

    <!-- Seção Vincular -->
    <VBox spacing="10" style="-fx-border-color: #3498db; -fx-border-width: 1; -fx-border-radius: 5; -fx-padding: 10;">
        <Label text="Vincular Aluno a Orientador" style="-fx-font-weight: bold;"/>
        <HBox spacing="20">
            <VBox spacing="5">
                <Label text="Selecionar Aluno:"/>
                <ComboBox fx:id="comboAlunos" prefWidth="250"/>
            </VBox>
            <VBox spacing="5">
                <Label text="Selecionar Orientador:"/>
                <ComboBox fx:id="comboProfessores" prefWidth="250"/>
            </VBox>
        </HBox>
        <HBox spacing="10">
            <Button text="Vincular" onAction="#vincularAlunoOrientador"
                    style="-fx-background-color: #27ae60; -fx-text-fill: white;"/>
            <Button text="Desvincular" onAction="#desvincularAluno"
                    style="-fx-background-color: #e74c3c; -fx-text-fill: white;"/>
            <Button text="Atualizar Dados" onAction="#atualizarDados"
                    style="-fx-background-color: #3498db; -fx-text-fill: white;"/>
            <Button text="Mostrar Todos" onAction="#mostrarTodosAlunos"
                    style="-fx-background-color: #f39c12; -fx-text-fill: white;"/>
        </HBox>
    </VBox>

    <!-- Estatísticas -->
    <HBox spacing="20">
        <VBox spacing="10" style="-fx-border-color: #bdc3c7; -fx-border-width: 1; -fx-padding: 10;">
            <Label text="Estatísticas Gerais" style="-fx-font-weight: bold;"/>
            <GridPane hgap="10" vgap="5">
                <Label text="Total de Alunos:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
                <Label fx:id="labelTotalAlunos" text="0" style="-fx-font-weight: bold;" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Com Orientador:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
                <Label fx:id="labelAlunosComOrientador" text="0" style="-fx-font-weight: bold; -fx-text-fill: green;" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Sem Orientador:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
                <Label fx:id="labelAlunosSemOrientador" text="0" style="-fx-font-weight: bold; -fx-text-fill: red;" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Média por Professor:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
                <Label fx:id="labelMediaPorProfessor" text="0.0" style="-fx-font-weight: bold;" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>
        </VBox>
    </HBox>

    <!-- Tabelas -->
    <HBox spacing="20" VBox.vgrow="ALWAYS">
        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Lista de Alunos" style="-fx-font-weight: bold;"/>
            <TableView fx:id="tableViewAlunos" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNomeAluno" text="Nome" prefWidth="150"/>
                    <TableColumn fx:id="colEmailAluno" text="Email" prefWidth="200"/>
                    <TableColumn fx:id="colOrientadorAluno" text="Orientador" prefWidth="150"/>
                </columns>
            </TableView>
        </VBox>

        <VBox spacing="5" HBox.hgrow="ALWAYS">
            <Label text="Lista de Professores" style="-fx-font-weight: bold;"/>
            <TableView fx:id="tableViewProfessores" VBox.vgrow="ALWAYS">
                <columns>
                    <TableColumn fx:id="colNomeProfessor" text="Nome" prefWidth="200"/>
                    <TableColumn fx:id="colQuantidadeAlunos" text="Qtd. Alunos" prefWidth="100"/>
                </columns>
            </TableView>
        </VBox>
    </HBox>

</VBox>